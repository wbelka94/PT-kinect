<Window x:Class="FB_Kinect_Painter.MainWindow"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FB_Kinect_Painter"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowState="Maximized">
    <Grid Background="black">
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        <k:KinectUserViewer VerticalAlignment="Top" HorizontalAlignment="Center" 
        k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="300"/>
        <k:KinectRegion Name="kinectRegion">
            <k:KinectTileButton Label="Press me!" Click="OnClickPressMe"></k:KinectTileButton>
        </k:KinectRegion>
        
    </Grid>
</Window>
